<link rel="stylesheet" href="default.css">

<div class="flexcol alignitems justify">
    <h1 style="padding:2%;">Login</h1>

    <% if (messages.error){ %>
        <%=messages.error %>
            <% } %>
                <form class="flexcol alignitems justify" action="/login" method="POST"
                    style="width:300px;border:1px solid black; padding:1%;height:190px;">


                    <div className="" style="padding:2%;">
                        <label for="email" class="width10">Email</label>
                        <input type="email" id="email" name="email" required>
                    </div>

                    <div className="margintop">

                        <label for="password" class="width10">Password</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <button class="margintop" style="padding:1%;">Login</button>
                </form>

                <a href="/register">Register</a>
</div>