<link rel="stylesheet" href="default.css">

<div class="flexcol alignitems justify">
    <h1 style="padding:2%;">Register </h1>

    <form action="/register" method="POST" style="width:300px;border:1px solid black; padding:1%;height:190px;">

        <div class="">
            <label for="name" class="width10" style="padding:2%;">Name</label>
            <input type="text" id="name" name="name" required>
        </div>

        <div className="" style="padding:2%;">
            <label for="email" class="width10">Email</label>
            <input type="email" id="email" name="email" required>
        </div>

        <div className="">

            <label for="password" class="width10">Password</label>
            <input type="password" id="password" name="password" required>
        </div>
        <button class="margintop" style="padding:1%;">Register</button>
    </form>

    <a href="/login">Login</a>
</div>